.wrapper
  #doc_show
    %h1.title= @doc.title
    %p= simple_format(@doc.content)

    .buttons
      = link_to 'View All docs', docs_path, class: 'button'
      = link_to 'Edit doc', edit_doc_path, class: 'button'
      = link_to 'Delete doc', doc_path(@doc), method: :delete, data: { confirm: "are you sure?" }, class: 'button'
