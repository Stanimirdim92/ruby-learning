%h1 View All documents

.wrapper_with_padding
  #docs.clearfix
    - if not @docs.blank?
      - @docs.each do |doc|
        %a{ href: (url_for [doc])}
          .doc
            %h2.title= doc.title
            %p.date= time_ago_in_words(doc.created_at)
            %p.content= truncate(doc.content, length:50)
    - else
      %h2 Create Doc!
      %p Start creating new document
      %p= link_to 'Add new Doc', new_doc_path
